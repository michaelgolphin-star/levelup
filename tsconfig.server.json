{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "server/dist",
    "rootDir": "server",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "jsx": "preserve",
    "typeRoots": ["./node_modules/@types", "./server"],
    "noEmit": false
  },
  "include": ["server/**/*.ts", "server/**/*.d.ts", "shared/**/*.ts"]
}
