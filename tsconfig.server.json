{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "server/dist",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false
  },
  "include": ["server/**/*.ts", "server/**/*.d.ts", "shared/**/*.ts"]
}
